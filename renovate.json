{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":semanticCommitTypeAll(chore)"
  ],
  "configMigration": true,
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    },
    {
      "matchFileNames": [
        ".github/workflows/**"
      ],
      "addLabels": [
        "actions"
      ],
      "groupName": "Actions"
    },
    {
      "matchPackagePatterns": [
        "androidx.*"
      ],
      "groupName": "AndroidX",
      "addLabels": [
        "androidx"
      ]
    },
    {
      "matchPackagePatterns": [
        "io.insert-koin.*"
      ],
      "groupName": "Koin",
      "addLabels": [
        "koin"
      ]
    },
    {
      "matchPackagePatterns": [
        "io.ktor.*"
      ],
      "groupName": "Ktor",
      "addLabels": [
        "ktor"
      ]
    },
    {
      "matchPackagePatterns": [
        "io.coil-kt.*"
      ],
      "groupName": "Coil",
      "addLabels": [
        "coil"
      ]
    },
    {
      "matchPackagePatterns": [
        ".*compose.*"
      ],
      "addLabels": [
        "compose"
      ]
    },
    {
      "matchPackagePatterns": [
        ".*devtools.ksp.*"
      ],
      "addLabels": [
        "ksp"
      ]
    },
    {
      "matchPackagePatterns": [
        "org.jetbrains.kotlin.*"
      ],
      "addLabels": [
        "kotlin"
      ]
    },
    {
      "matchPackagePatterns": [
        "io.ktor.*"
      ],
      "allowedVersions": "!/^(3\\.2\\.0|3\\.0\\.0-wasm.*)$/"
    },
    {
      "matchPackagePatterns": [
        "io.insert-koin.*"
      ],
      "allowedVersions": "!/^(1\\.2\\.0-alpha.*|3\\.6\\.0.*alpha.*)$/"
    }
  ]
}
